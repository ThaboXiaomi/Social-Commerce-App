# =========================
# UniHub - Environment File
# =========================
# Copy this file to `.env` and fill values.
# Note: `.env` is gitignored in this project.

# -------------------------
# Core app (already used)
# -------------------------
# JWT signing secret for backend auth tokens.
UNIHUB_TOKEN_SECRET=change-this-in-production

# Public URL where backend serves uploaded media.
# Example: http://localhost:8000
MEDIA_BASE_URL=http://localhost:8000

# Frontend (Expo) base URL for API requests.
# Example: http://localhost:8000
EXPO_PUBLIC_API_BASE_URL=http://localhost:8000

# Existing external content providers
NEWSAPI_KEY=your_newsapi_key
PEXELS_API_KEY=

# -------------------------
# Map stack (recommended)
# -------------------------
# One-key location stack (maps, geocoding, places, routing)
GEOAPIFY_API_KEY=your_geoapify_key

# Optional alternative routing/isochrone provider
OPENROUTESERVICE_API_KEY=your_openrouteservice_key

# OSM geocoding (public endpoint; no key)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org

# OSM POI querying (public endpoint; no key)
OVERPASS_API_URL=https://overpass-api.de/api/interpreter

# Optional commercial-ish map tiles/geocoding provider (free non-commercial plan)
MAPTILER_API_KEY=your_maptiler_key

# -------------------------
# Mini Apps stack (recommended)
# -------------------------
# Weather, air quality, geocoding (no key for open/non-commercial usage)
OPENMETEO_BASE_URL=https://api.open-meteo.com/v1

# Timezone/time info (no key, fair-use)
WORLDTIME_API_URL=https://worldtimeapi.org/api

# Currency rates (no key)
FRANKFURTER_API_URL=https://api.frankfurter.app

# CoinGecko now supports Demo keys; keep blank if not used
COINGECKO_DEMO_API_KEY=
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# -------------------------
# Optional feature flags
# -------------------------
ENABLE_MAP_FEATURES=true
ENABLE_MINI_APPS=true
